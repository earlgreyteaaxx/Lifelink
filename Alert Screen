import React, { useState } from 'react';
import { View, Text, Button, StyleSheet, ScrollView } from 'react-native';

const AlertScreen = () => {
    // State to hold alerts
    const [alerts, setAlerts] = useState([
        { id: 1, title: 'Severe Weather Warning', description: 'A severe thunderstorm is expected in your area. Please take shelter immediately and avoid outdoor activities.', acknowledged: false },
        { id: 2, title: 'Flash Flood Alert', description: 'Flash flooding is likely in low-lying areas. Move to higher ground and avoid driving through flooded roads.', acknowledged: false },
        { id: 3, title: 'Heat Advisory', description: 'High temperatures are expected. Stay hydrated and limit outdoor activities during peak hours.', acknowledged: false }
    ]);

    // Function to acknowledge an alert
    const acknowledgeAlert = (id) => {
        const updatedAlerts = alerts.map(alert => {
            if (alert.id === id) {
                return { ...alert, acknowledged: true };
            }
            return alert;
        });
        setAlerts(updatedAlerts);
    };

    return (
        <View style={styles.container}>
            <Text style={styles.header}>Active Alerts</Text>
            <ScrollView>
                {alerts.map((alert) => (
                    <View key={alert.id} style={styles.alertBox}>
                        <Text style={styles.alertTitle}>{alert.title}</Text>
                        <Text style={styles.alertDescription}>{alert.description}</Text>
                        <Button
                            title={alert.acknowledged ? 'Acknowledged' : 'Acknowledge'}
                            onPress={() => acknowledgeAlert(alert.id)}
                            disabled={alert.acknowledged}
                        />
                    </View>
                ))}
            </ScrollView>
        </View>
    );
};

const styles = StyleSheet.create({
    container: {
        flex: 1,
        padding: 10,
        backgroundColor: '#fff'
    },
    header: {
        fontSize: 22,
        fontWeight: 'bold',
        marginBottom: 20
    },
    alertBox: {
        marginBottom: 20,
        padding: 10,
        borderRadius: 10,
        backgroundColor: '#f0f0f0',
        shadowColor: '#000',
        shadowOffset: { width: 0, height: 1 },
        shadowOpacity: 0.22,
        shadowRadius: 2.22,
        elevation: 3
    },
    alertTitle: {
        fontSize: 18,
        fontWeight: 'bold'
    },
    alertDescription: {
        fontSize: 14,
        marginBottom: 10
    }
});

export default AlertScreen;
